name: Docker Image CI

on:
  push:
    branches: [ "preproduction" ]
  pull_request:
    branches: [ "main" ]

jobs:
  docker:
    runs-on: ubuntu-latest
    steps:
      -
        name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      -
        name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_PASSWORD }}
      -
        name: Checkout
        uses: actions/checkout@v4    
      -
        name: Build and push
        uses: docker/build-push-action@v5
        working-directory: ./sources/backend
        with:
          context: .
          file: ./LibraryServices.Gateway/Dockerfile
          push: true
          tags: ${{ secrets.DOCKERHUB_USERNAME }}/library.gateway:latest
      -
        name: Build and push
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./LibraryServices.PackageService/Dockerfile
          push: true
          tags: ${{ secrets.DOCKERHUB_USERNAME }}/library.package:latest
