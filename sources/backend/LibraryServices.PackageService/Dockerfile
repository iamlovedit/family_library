FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS publish
WORKDIR /src
COPY ["LibraryServices.PackageService/LibraryServices.PackageService.csproj", "LibraryServices.PackageService/"]
COPY ["LibraryServices.Domain/LibraryServices.Domain.csproj", "LibraryServices.Domain/"]
COPY ["LibraryServices.Infrastructure/LibraryServices.Infrastructure.csproj", "LibraryServices.Infrastructure/"]
COPY . .
WORKDIR "/src/LibraryServices.PackageService"
RUN dotnet publish "LibraryServices.PackageService.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
VOLUME ["/app/logs"]
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "LibraryServices.PackageService.dll"]